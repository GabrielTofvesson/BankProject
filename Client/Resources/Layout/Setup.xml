<?xml version="1.0" encoding="utf-8" ?>
<Elements xmlns="Client.ConsoleForms.Graphics">
  
  <!-- Welcome screen -->
  <DialogView id="WelcomeScreen"
             padding_left="2"
             padding_right="2"
             padding_top="1"
             padding_bottom="1"
             width="42">
    <Options>
      <Option event="Setup:Login" close="true">@string/SU_login_label</Option>
      <Option event="Setup:Register" close="true">@string/SU_reg_label</Option>
    </Options>
    <Text>@string/SU_welcome</Text>
  </DialogView>
  
  <!-- Register-context views -->
  <InputView id="Register"
                padding_left="2"
                padding_right="2"
                padding_top="1"
                padding_bottom="1"
                width="35"
                back="Setup:WelcomeScreen">
    <Fields>
      <Field>@string/SU_usr</Field>
      <Field hide="true">@string/SU_pwd</Field>
      <Field hide="true">@string/SU_pwdrep</Field>
    </Fields>
    <Text>@string/SU_reg</Text>
  </InputView>
  
  <TextView id="RegWait"
           padding_left="2"
           padding_right="2"
           padding_top="1"
           padding_bottom="1"
           border="3">
    <Text>@string/SU_regstall</Text>
  </TextView>

  <DialogView id="DuplicateAccountError"
    padding_left="2"
    padding_right="2"
    padding_top="1"
    padding_bottom="1"
             border="4">
    <Options>
      <Option>@string/GENERIC_accept</Option>
    </Options>
    <Text>@string/SU_dup</Text>
  </DialogView>
  
  <DialogView id="PasswordMismatchError"
    padding_left="2"
    padding_right="2"
    padding_top="1"
    padding_bottom="1"
             border="4">
    <Options>
      <Option>@string/GENERIC_accept</Option>
    </Options>
    <Text>@string/SU_mismatch</Text>
  </DialogView>

  <DialogView id="WeakPasswordWarning"
    padding_left="2"
    padding_right="2"
    padding_top="1"
    padding_bottom="1"
             border="6">
    <Options>
      <Option>Yes</Option>
      <Option>No</Option>
    </Options>
    <Text>@string/SU_weak</Text>
  </DialogView>
  
  <!-- Login-context views -->
  <InputView id="Login"
                padding_left="2"
                padding_right="2"
                padding_top="1"
                padding_bottom="1"
                width="35"
                back="Setup:WelcomeScreen">
    <Fields>
      <Field>@string/SU_usr</Field>
      <Field hide="true">@string/SU_pwd</Field>
    </Fields>
    <Text>@string/SU_login</Text>
  </InputView>

  <TextView id="AuthWait"
           padding_left="2"
           padding_right="2"
           padding_top="1"
           padding_bottom="1"
           border="3">
    <Text>@string/SU_authstall</Text>
  </TextView>

  <DialogView id="AuthError"
    padding_left="2"
    padding_right="2"
    padding_top="1"
    padding_bottom="1"
             border="4">
    <Options>
      <Option>@string/GENERIC_accept</Option>
    </Options>
    <Text>@string/SU_usrerr</Text>
  </DialogView>
</Elements>